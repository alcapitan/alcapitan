{
    "name": "portfolio-alcapitan",
    "version": "1.0.0",
    "description": "Portfolio of Al Capitan",
    "engines": {
        "node": ">=14"
    },
    "private": true,
    "main": "index.html",
    "scripts": {
        "babel": "babel src/*.js -d dist/ --source-maps",
        "cspell": "cspell lint \"src/*\" \"*.md\" \"*.html\" --cache --show-context",
        "eslint": "eslint src/*.js --fix --cache",
        "eslint:check": "eslint src/*.js --cache",
        "postcss": "postcss src/*.css --dir dist/ --map",
        "prettier": "prettier -w src/ *.md *.html --cache -u",
        "prettier:check": "prettier -c src/ *.md *.html --cache -u",
        "stylelint": "stylelint \"src/*.css\" --cache --fix",
        "stylelint:check": "stylelint \"src/*.css\" --cache",
        "check": "npm-run-all cspell prettier:check stylelint:check eslint:check --continue-on-error",
        "lint": "npm-run-all cspell prettier stylelint eslint --continue-on-error",
        "test": "npm-run-all check --continue-on-error --parallel \"build:*\"",
        "build:css": "npm-run-all postcss",
        "build:js": "npm-run-all babel",
        "build": "npm-run-all lint --continue-on-error --parallel \"build:*\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alcapitan/alcapitan.git"
    },
    "keywords": [
        "portfolio",
        "alcapitan"
    ],
    "author": "Al Capitan",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/alcapitan/alcapitan/issues"
    },
    "homepage": "https://github.com/alcapitan/alcapitan#readme",
    "dependencies": {
        "simple-icons": "^8.8.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.21.0",
        "@babel/core": "^7.21.3",
        "@babel/eslint-parser": "^7.21.3",
        "@babel/preset-env": "^7.20.2",
        "autoprefixer": "^10.4.14",
        "babel-preset-minify": "^0.5.2",
        "cspell": "^6.30.2",
        "cssnano": "^5.1.15",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.8.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.21",
        "postcss-cli": "^10.1.0",
        "postcss-preset-env": "^8.0.1",
        "prettier": "^2.8.6",
        "stylelint": "^15.3.0",
        "stylelint-config-standard": "^31.0.0"
    }
}
